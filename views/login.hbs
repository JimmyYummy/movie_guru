<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Movie Guru</title>
        <meta name="Movie Guru" content="Movie Recommendations">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://getbootstrap.com/docs/4.1/examples/floating-labels/floating-labels.css">
        <link rel="stylesheet" type="text/css" href="css/login.css">
        <link rel="shortcut icon" type="image/x-icon" href="favicon.ico"/>
    </head>
    <body>
      {{#if error}}
        <form method="post" class="form-signin needs-validation was-validated" novalidate>
      {{else}}
        <form method="post" class="form-signin needs-validation" novalidate>
      {{/if}}
          <div class="text-center mb-4">
            <img align="none" src="movie-icon.jpg" height="225" width="250">
          </div>
            <div class="form-label-group">
              <input type="username" id="inputUsername" name="username" class="form-control" placeholder="Username" required="" autofocus="" value="{{user}}">
              <label for="inputUsername">Username</label>
            </div>
            <div class="form-label-group" style="margin-bottom: 0px;">
              <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">
              <label for="inputPassword">Password</label>
            </div>
            <!-- Hidden input because I want to apply invalid feedback under the password with a generous margin -->
            <div class="form-label-group">
              {{#if error}}
                <input type="hidden" id="hiddenInput" class="form-control is-invalid">
              {{else}}
                <input type="hidden">
              {{/if}}
              <div class="invalid-feedback">
                Username or Password is incorrect
              </div>
            </div>
            <button class="btn btn-lg btn-block btn-signin" type="submit">Sign in</button>
            <button id="facebook-login" class="btn btn-lg btn-block" type="submit" style="background: #4267B2; color: white;">
              <img height="30" width="30" src="Facebook-Brand-Asset-Pack/f-Logo_Assets/F_Logo_Online_09_2018/Color/SVG/flogo_RGB_HEX-72.svg">
              Sign in with Facebook
            </button>
        </form>
    </body>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="/js/login.js"></script>
</html>
