<link rel="stylesheet" href="/css/smv.css">
<div class="content">
    <div>
        <div class = "icon-flex">
            <i id = "film-icon", class="fa fa-film fa-2x" aria-hidden="true"></i>
            <h1>{{movie.title}}</h1>
        </div>
        <div id = "info">
            <ul>
                <li>Length: {{movie.runtime}} minutes</li>
                <li>Year Released: {{movie.release_year}}</li>
                <!--change the rating latter-->
                <li>Rating: {{movie.rating}}</li>
                <li>Your Rating: <form id = "user_rating"> <input type="text"> <input type="submit"> </form> </li>
            </ul>
        </div>
    </div>

    <div class = "staff-block">
        <div id = "cast-block">
            <div class = "icon-flex">
                <i class="fa fa-street-view fa-lg" aria-hidden="true"></i>
                <h3>Casts</h3>
            </div>
                {{#each casts}}
                    <div class = "entry"><div class = "entry-left">{{charac}}:</div><div class = "entry-right">{{name}}</div></div>
                {{/each}}
        </div>
        <div id = "crew-block">
            <div class = "icon-flex">
                <i class="fa fa-users fa-lg" aria-hidden="true"></i>
                <h3>Crews</h3>
            </div>
                {{#each crews as |people job|}}
                    <div class = "entry"><div class = "entry-left">{{job}}:</div><div class = "entry-right">{{people}}</div></div>
                {{/each}}
        </div>
    </div>

    <div id="similar-movies"></div>
</div>
<script src="/js/smv.js"></script>
